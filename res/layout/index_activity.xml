<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 顶部 -->
    <!-- 容器 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp" >

        <!-- 左边 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- 用户状态 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/index_image9"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/index_user_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/index_user_logo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/index_image1"
                    android:orientation="vertical" >

                    <!-- 状态 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="状态："
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/index_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未签到"
                            android:textColor="#ffffff" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击签到"
                            android:textColor="#ffffff" />
                    </LinearLayout>
                    <!-- 你好 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="你好："
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/index_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Angel baby"
                            android:textColor="#ffffff" />
                    </LinearLayout>
                    <!-- 今天 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今天："
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/index_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015年6月25号"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                    <!-- 通知消息 -->

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/index_notification"
                            android:layout_width="35dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/index_message" />

                        <ImageView
                            android:id="@+id/index_count_quanquan"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_toRightOf="@+id/index_notification"
                            android:contentDescription="@string/content_description"
                            android:src="@drawable/index_quanquan" />

                        <TextView
                            android:id="@+id/index_count"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@id/index_notification"
                            android:text="-1"
                            android:textColor="#ff0000"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 工作轨迹 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/index_image3"
                android:orientation="vertical" >

                <!-- 顶部 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="right|center_vertical" >

                    <Button
                        android:id="@+id/index_track_point"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/index_more_button" />
                </LinearLayout>
                <!-- 中间 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="22dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:singleLine="true"
                        android:text="成都市金牛区华丰路"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="22dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:singleLine="true"
                        android:text="成都市青羊区清溪东路99号"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="22dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:singleLine="true"
                        android:text="成都市武侯区锦里西路107号"
                        android:textColor="#ffffff" />
                </LinearLayout>
                <!-- 间隔线条 -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/index_parting" />
                <!-- 底部 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="right|center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="35dp"
                        android:text="工作轨迹"
                        android:textColor="#ffffff" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/index_image8" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- 右边 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp" >

            <!-- 路线规划 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/index_image2"
                android:orientation="vertical" >

                <!-- 顶部 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="right|center_vertical" >

                    <Button
                        android:id="@+id/index_work_track"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/index_more_button" />
                </LinearLayout>
                <!-- 中间 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:singleLine="true"
                        android:text="天安门  → 百度大厦"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:singleLine="true"
                        android:text="花照壁街  → 四圣祠北街"
                        android:textColor="#ffffff" />
                </LinearLayout>
                <!-- 间隔线条 -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/index_parting" />
                <!-- 底部 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="right|center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="35dp"
                        android:text="路线规划"
                        android:textColor="#ffffff" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/index_image7" />
                </LinearLayout>
            </LinearLayout>
            <!-- 贷款业务 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/index_image4"
                android:orientation="vertical" >

                <!-- 顶部 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="right|center_vertical" >

                    <Button
                        android:id="@+id/index_loan"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/index_more_button" />
                </LinearLayout>
                <!-- 中间 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:singleLine="true"
                        android:text="张三	家居装修	10万"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:singleLine="true"
                        android:text="李四	医疗美容	5万"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:singleLine="true"
                        android:text="王五	购车家电	15万"
                        android:textColor="#ffffff" />
                </LinearLayout>
                <!-- 间隔线条 -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/index_parting" />
                <!-- 底部 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="right|center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="35dp"
                        android:text="贷款业务"
                        android:textColor="#ffffff" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/index_house" />
                </LinearLayout>
            </LinearLayout>
            <!-- 备忘录 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/index_image5"
                android:orientation="vertical" >

                <!-- 顶部 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="right|center_vertical" >

                    <Button
                        android:id="@+id/index_remark"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/index_more_button" />
                </LinearLayout>
                <!-- 中间 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="22dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:singleLine="true"
                        android:text="李克强部署促进社会办医：“松绑”要到位"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="22dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:singleLine="true"
                        android:text="科学认识判断经济形势的指标体系"
                        android:textColor="#ffffff" />
                </LinearLayout>
                <!-- 间隔线条 -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/index_parting" />
                <!-- 底部 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="right|center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="35dp"
                        android:text="备忘录"
                        android:textColor="#ffffff" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/index_image6" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>