<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
	<LinearLayout android:layout_width="@dimen/expression_list_item_iv_wh"
	    android:layout_height="@dimen/expression_list_item_iv_wh"
	    android:orientation="vertical"
	    android:gravity="center">
	    <ImageView android:id="@+id/iv_id"
	        android:layout_width="@dimen/expression_list_item_iv_wh"
	        android:layout_height="@dimen/expression_list_item_iv_wh"
	        android:src="@null"
	        android:layout_gravity="center"/>
	    <TextView android:id="@+id/tv_id"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text=" "
	        android:gravity="center"
	        android:visibility="gone"/>
	</LinearLayout>
</LinearLayout>