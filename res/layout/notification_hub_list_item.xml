<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" >

    <!-- 隐藏id -->

    <TextView
        android:id="@+id/notification_hub_list_item_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
    <!-- 未读与时间 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/notification_hub_list_item_unread"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/iconfontyoujian" />

        <TextView
            android:id="@+id/notification_hub_list_item_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2小时前" />
    </LinearLayout>
    <!-- 标题和内容 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="2dp" >

        <TextView
            android:id="@+id/notification_hub_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="骁龙810众叛亲离 骁龙820能否救主？" />

        <TextView
            android:id="@+id/notification_hub_list_item_body"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="提起高通的骁龙810处理器，大家都知道是它最新最好的处理器型号，不过现在提起它往往大家想到的不是它有多快、跑分有多高，而是发热解决了吗？哪个厂商又被坑了吗？" />
    </LinearLayout>
    <!-- 右边 -->

    <ImageView
        android:id="@+id/notification_hub_list_item_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:contentDescription="@string/content_description"
        android:src="@drawable/iconfontright" />

</LinearLayout>