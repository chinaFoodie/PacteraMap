<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/login_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="30dp" >

            <com.pactera.pacteramap.view.component.MyEditText
                android:id="@+id/do_login_username"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >
            </com.pactera.pacteramap.view.component.MyEditText>

            <com.pactera.pacteramap.view.component.MyEditText
                android:id="@+id/do_login_password"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >
            </com.pactera.pacteramap.view.component.MyEditText>

            <TextView
                android:id="@+id/tv_login_do"
                style="@style/tv.btn"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/corners_background"
                android:gravity="center"
                android:text="登录" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp" >

                <TextView
                    android:id="@+id/tv_login_register"
                    style="@style/tv.btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    android:gravity="center_vertical"
                    android:text="注册 >>"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_login_forget"
                    style="@style/tv.btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/tv_login_register"
                    android:gravity="center_vertical"
                    android:text="忘记密码"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="80dp" />
    </LinearLayout>

</RelativeLayout>